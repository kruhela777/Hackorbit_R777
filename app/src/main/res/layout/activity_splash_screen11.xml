<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash11Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_purple_blue"
    android:padding="24dp">

    <!-- Doctor GIF -->
    <ImageView
        android:id="@+id/doctorGif"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter" />

    <!-- Text Container (Title + Subtitle, aligned to left) -->
    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/doctorGif"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:layout_marginTop="36dp"
        android:layout_marginStart="32dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅 “Book Doctors in Seconds”"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:gravity="start" />

        <TextView
            android:id="@+id/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instant doctor booking.\nAnytime. Anywhere."
            android:textColor="#CCCCCC"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:gravity="start" />
    </LinearLayout>

    <!-- Next Arrow Button -->
    <ImageView
        android:id="@+id/nextArrow"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/arrow"
        android:padding="14dp" />
</RelativeLayout>
