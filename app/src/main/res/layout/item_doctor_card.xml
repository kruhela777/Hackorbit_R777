<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:foreground="?attr/selectableItemBackground">


<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/bg_doctor_gradient">

        <!-- Doctor Image -->
        <ImageView
            android:id="@+id/imgDoctor"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:src="@drawable/doctor1"
            android:padding="4dp" />

        <!-- Like Button -->
        <ImageView
            android:id="@+id/ivLike"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/heart_outline"
            android:contentDescription="Like" />

        <!-- Rating -->
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgDoctor"
            android:layout_alignStart="@id/imgDoctor"
            android:layout_marginTop="8dp"
            android:text="★ 4.8"
            android:textColor="#FFD700"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Doctor Info Block -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgDoctor"
            android:layout_alignTop="@id/imgDoctor"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvSpecialty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardiologist"
                android:textColor="#e0f2f1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Kartik Verma"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹1200/session"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Calendar Slot Container (dynamically filled in Java) -->
        <LinearLayout
            android:id="@+id/layoutSlots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRating"
            android:layout_alignStart="@id/imgDoctor"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
